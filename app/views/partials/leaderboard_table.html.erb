<%= render 'partials/header' %>

<h1>From: <%= Time.now.beginning_of_week.to_date %> - <%= Time.now.end_of_week.to_date %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Minutes</th>
    </tr>
  </thead>
  <% @leaderboards.each_with_index do |leaderboard,i| %>
    <tr>
      <td><%= i+1 %></td>
      <td><%= leaderboard.name %></td>
      <td><%= leaderboard.total_minutes %></td>
    </tr>
  <% end %>
  <tr>
    <td></td>
    <td></td>
    <td><%= @leaderboards.map(&:total_minutes).sum %></td>
  </tr>
</table>
