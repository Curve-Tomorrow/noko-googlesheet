<%= render 'partials/header' %>

<%= link_to '- 1 Week', "?weeks_ago=#{@weeks_ago+1}" %>
<%= link_to '+ 1 Week', "?weeks_ago=#{@weeks_ago-1}" %>
<h1>From: <%= @start_date %> - <%= @end_date %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Minutes</th>
    </tr>
  </thead>
  <% @leaderboards.each_with_index do |leaderboard,i| %>
    <tr>
      <td><%= i+1 %></td>
      <td><%= leaderboard.name %></td>
      <td><%= leaderboard.total_minutes %></td>
    </tr>
  <% end %>
  <tr>
    <td></td>
    <td></td>
    <td><%= @leaderboards.map(&:total_minutes).sum %></td>
  </tr>
</table>
